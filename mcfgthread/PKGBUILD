# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mcfgthread
pkgver=20250820
pkgrel=1
pkgdesc='MCF thread model'
arch=('x86_64')
url="https://gcc-mcf.lhmouse.com/"
license=('custom')
source=()
md5sums=()

build() {
  cd /ucrt64
  set -ex
  find ./lib -type f \( -name "*.dll.a" ! -name "libmcfgthread.dll.a" \) -exec rm -f {} +
  rm -rf include/pkg*
  rm -rf lib/pkg*

  #Remove boost
  rm -rf include/boost
  rm lib/libboost*

  #Remove brotli
  rm -rf include/brotli
  rm lib/libbrotli*

  #Remove bzip2
  rm include/bzlib.h
  rm lib/libbz2*

  #Remove expat
  rm include/expat*
  rm lib/libexpat*

  #Remove gettext
  rm include/autosprintf.h
  rm include/libintl.h
  rm -rf lib/gettext
  rm lib/libasprintf*
  rm lib/libintl*

  #Remove icu  
  rm -rf include/unicode
  rm -rf lib/*icu*

  #Remove libarchive
  rm include/archive*
  rm lib/libarchive*

  #Remove libffi
  rm include/ffi*
  rm lib/libffi*

  #Remove libiconv
  rm include/iconv.h
  rm include/libcharset.h
  rm include/localcharset.h
  rm lib/libcharset*
  rm lib/libiconv*

  #Remove libmangle-git
  rm include/libmangle*
  rm lib/libmangle*

  #Remove libsystre
  rm include/regex.h
  rm lib/libgnurx*
  rm lib/libregex*
  rm lib/libsystre*

  #Remove libtasn1
  rm include/libtasn1*
  rm lib/libtasn1*

  #Remove libtre-git
  rm -rf include/tre
  rm lib/libtre*

  #Remove lua and tolua
  rm include/lauxlib.h
  rm -rf include/*lua*
  rm -rf lib/*lua*

  #Remove mpdecimal
  rm include/decimal.hh
  rm include/mpdecimal.h
  rm lib/libmpdec*

  #Remove ncurses
  rm -rf include/ncur*
  rm lib/libform*
  rm lib/libmenu*
  rm lib/libncur*
  rm lib/libpanel*
  rm -rf lib/terminfo

  #Remove openssl
  rm -rf include/openssl
  rm -rf lib/engines*
  rm lib/libcrypto*
  rm lib/libssl*

  #Remove p11-kit
  rm -rf lib/*p11*
  rm -rf lib/pkcs11*
  rm -rf include/p11*

  #Remove pcre2
  rm include/pcre2*
  rm lib/*pcre*

  #Remove readline
  rm -rf include/readline
  rm lib/libhistory.a
  rm lib/libreadline.a

  #Remove sqlite3
  rm include/*sql*
  rm -rf lib/*sql*

  #Remove tcl
  rm include/itcl*
  rm include/*Stubs*
  rm -rf include/tcl*
  rm -rf include/tdb*
  rm -rf lib/dde*
  rm -rf lib/*tcl*
  rm -rf lib/reg*
  rm -rf lib/tdb*
  rm -rf lib/thread*

  #Remove termcap
  rm bin/libtermcap*
  rm include/termcap.h
  rm lib/libtermcap*

  #Remove tk
  rm -rf include/tk*
  rm -rf include/X11
  rm -rf lib/*tk*

  #Remove wineditline
  rm -rf include/editline
  rm lib/libedit*

  #Remove xxhash
  rm include/xxh*

  #Remove xz
  rm -rf include/lzma*
  rm lib/liblzma*

  #Remove zstd
  rm include/zdict.h
  rm include/zstd*
  rm lib/libzstd*
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/bin
  cp /ucrt64/bin/libmcfgthread* $pkgdir/opt/bin/
  rm $pkgdir/opt/bin/*minimal*
  strip $pkgdir/opt/bin/*
}
