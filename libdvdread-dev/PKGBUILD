# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=libdvdread-dev
pkgver=7.0.1
pkgrel=1
pkgdesc='Provides a simple foundation for reading DVD video disks'
arch=('x86_64')
url="https://www.videolan.org/developers/libdvdnav.html"
makedepends=('libdvdcss-dev')
license=('GPL')
source=("https://download.videolan.org/pub/videolan/libdvdread/$pkgver/libdvdread-$pkgver.tar.xz")
md5sums=('SKIP')

build() {
  cd $srcdir/libdvdread-$pkgver
  mkdir work
  meson . work --prefix=/opt --buildtype=release --default-library=static -Dlibdvdcss=enabled
  cd work
  ninja
}

package() {
  cd $srcdir/libdvdread-$pkgver/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
