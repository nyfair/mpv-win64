# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=libbluray-dev
pkgver=1.4.0
pkgrel=1
pkgdesc='Library to access Blu-Ray disks for video playback'
arch=('x86_64')
url="https://www.videolan.org/developers/libbluray.html"
makedepends=('freetype2-dev')
license=('GPL')
source=("https://download.videolan.org/pub/videolan/libbluray/$pkgver/libbluray-$pkgver.tar.xz")
md5sums=('SKIP')

build() {
  cd $srcdir/libbluray-$pkgver
  mkdir work
  meson . work --prefix=/opt --buildtype=release --default-library=static \
    -Denable_tools=false -Dbdj_jar=disabled -Dlibxml2=disabled -Dfontconfig=disabled
  cd work
  ninja
}

package() {
  cd $srcdir/libbluray-$pkgver/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
