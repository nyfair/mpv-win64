pkgname=libwebp-dev
pkgver=1.6.0
pkgrel=1
pkgdesc='WebP library and conversion tools'
arch=('x86_64')
url="https://developers.google.com/speed/webp/"
license=('BSD')
source=("https://github.com/webmproject/libwebp/archive/refs/tags/v$pkgver.tar.gz")
md5sums=('SKIP')

build() {
  cd $srcdir/libwebp-$pkgver
  rm -rf build && mkdir build && cd build
  cmake .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED_LIBS=OFF
  cmake --build .
}

package() {
  cd $srcdir/libwebp-$pkgver/build
  cmake --install . --prefix=$pkgdir/opt
}
